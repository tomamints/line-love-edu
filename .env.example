# ================================
# LINE Bot Configuration (必須)
# ================================
# LINE Developersコンソールから取得
CHANNEL_SECRET=your_channel_secret_here
CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# ================================
# OpenAI Configuration (オプション)
# ================================
# AI分析を使用する場合のみ設定
# 未設定の場合はデフォルト分析を使用
OPENAI_API_KEY=your_openai_api_key_here

# ================================
# Application URL (必須)
# ================================
# ローカル開発用
BASE_URL=http://localhost:3000
# 本番環境用（Vercel）
# BASE_URL=https://line-love-edu.vercel.app
NEXT_PUBLIC_BASE_URL=https://line-love-edu.vercel.app

# ================================
# microCMS Configuration (ブログ用)
# ================================
MICROCMS_SERVICE_DOMAIN=otsukisama
MICROCMS_API_KEY=your_microcms_api_key_here

# ================================
# Application Configuration
# ================================
# development | production
FORTUNE_MODE=development

# ファイルストレージを強制使用（Supabase未設定時）
FORCE_FILE_STORAGE=false

# ================================
# Stripe Configuration (プレミアム機能用)
# ================================
# Stripeダッシュボードから取得
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe決済ページのURL
STRIPE_SUCCESS_URL=https://line-love-edu.vercel.app/api/payment-success
STRIPE_CANCEL_URL=https://line-love-edu.vercel.app/api/payment-cancel

# 決済方法の有効化（PayPayは早期アクセスが必要）
ENABLE_PAYPAY=false
ENABLE_BANK_TRANSFER=false

# ================================
# Supabase Configuration (オプション)
# ================================
# データベースを使用する場合のみ設定
# 未設定の場合はファイルストレージを使用
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# ================================
# Debug Configuration (開発用)
# ================================
# デバッグログを有効化
DEBUG=false

# テストモード（Webhook署名検証をスキップ）
TEST_MODE=false
