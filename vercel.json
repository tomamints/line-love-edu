{
  "version": 2,
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/main"
    },
    {
      "source": "/api/stripe/webhook",
      "destination": "/api/stripe-webhook-simple"
    },
    {
      "source": "/payment/success",
      "destination": "/api/payment-success"
    },
    {
      "source": "/payment/cancel",
      "destination": "/api/payment-cancel"
    },
    {
      "source": "/api/download-report",
      "destination": "/api/download-report"
    },
    {
      "source": "/moon",
      "destination": "/moon-fortune.html"
    },
    {
      "source": "/lp/otsukisama",
      "destination": "/lp-otsukisama.html"
    }
  ],
  "functions": {
    "api/main.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/stripe-webhook-simple.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/*.js": {
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "echo 'Build timestamp:' && date",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
