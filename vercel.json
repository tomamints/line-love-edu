{
  "version": 2,
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/webhook.js"
    }
  ],
  "functions": {
    "api/webhook.js": {
      "includeFiles": "comments.json",
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
